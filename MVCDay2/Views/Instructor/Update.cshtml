@{
}
@model MVCDay2.ViewModel.Instructor_data
@using (Html.BeginForm("Update", "Instructor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(model => model.Ins.Id)


    <div class="form-group">
        @Html.LabelFor(model => model.Ins.Name)
        @Html.TextBoxFor(model => model.Ins.Name, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ins.Img)
        <input type="file" name="imageFile" accept="image/*" required />
        @if (!string.IsNullOrEmpty(Model.Ins.Img))
        {
            <p>Current Image:</p>
            <img src="~/images/@Model.Ins.Img" style="width:100px ;height:100px" alt="Current Image" />
        }
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ins.Salary)
        @Html.TextBoxFor(model => model.Ins.Salary, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ins.Address)
        @Html.TextAreaFor(model => model.Ins.Address, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.course)
        @Html.DropDownListFor(model => model.Ins.Crs_id,new SelectList(Model.course, "Id", "Name"), "Select a department", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ins.Department)
        @Html.DropDownListFor(model => model.Ins.Dept_id,new SelectList(Model.Dept, "Id", "Name"), "Select a department", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}