@model List<Instructor>;
@{
    ViewData["Title"] = "Instructor";
}
<h1>All Instructors </h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Instructor item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Salary</td>
                <td><img src="/images/@item.Img" style="height:80px; width:80px;" /></td>
                <td><a href="/Instructor/MyInstructor/@item.Id">Details</a> </td>

            </tr>
        }


    </tbody>
</table>
